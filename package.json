{
  "name": "the-bedtime-project",
  "homepage": "https://bedtimeproject.org",
  "description": "The Bedtime Project - A fun and engaging way to hit the hay",
  "version": "5.0.0",
  "private": true,
  "dependencies": {
    "caniuse-lite": "^1.0.30001298",
    "chess.js": "^0.12.0",
    "core-js": "^3.20.2",
    "date-chinese": "^2.1.3",
    "gh-pages": "^3.2.3",
    "normalize.css": "^8.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-helmet-async": "^1.2.2",
    "react-icons": "^4.3.1",
    "react-router-dom": "^6.2.1",
    "react-scripts": "5.0.0",
    "sass": "^1.47.0"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^6.2.9",
    "@storybook/addon-essentials": "^6.2.9",
    "@storybook/addon-links": "^6.3.8",
    "@storybook/node-logger": "^6.2.9",
    "@storybook/preset-create-react-app": "^3.1.7",
    "@storybook/react": "^6.2.9",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "chromatic": "^5.8.3",
    "eslint": "^7.26.0",
    "eslint-config-react-app": "^7.0.0",
    "npm-license-crawler": "^0.2.1",
    "storybook-react-router": "^1.0.8"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "npm run licenses && react-scripts build",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build",
    "deploy:all": "npm run build && npm run deploy && npm run chromatic",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "storybook": "start-storybook -p 6006 -s public",
    "build-storybook": "build-storybook -s public",
    "chromatic": "npx chromatic --project-token=6c0dc9e53bb7",
    "licenses": "npm-license-crawler --onlyDirectDependencies --json src/Pages/About/Licenses/licenses.json",
    "gen": "./scripts/generateComponent.sh"
  },
  "resolutions": {
    "babel-loader": "8.1.0"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "overrides": [
      {
        "files": [
          "**/*.js"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off",
          "eqeqeq": "off"
        }
      }
    ]
  },
  "prettier": {
    "printWidth": 80,
    "arrowParens": "always",
    "semi": true,
    "tabWidth": 2
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
